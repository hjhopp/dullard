{
    "help" : {
        "alias"       : "?",
        "description" : "Show usage",
        "boolean"     : true
    },

    "version" : {
        "boolean"     : true
    },
    
    "dirs" : {
        "alias"       : "d",
        "description" : "directories to load task files from"
    },
    
    "list" : {
        "alias"       : "l",
        "description" : "List available tasks"
    },
    
    "quiet" : {
        "alias"       : "q",
        "description" : "Minimal output",
        "boolean"     : true
    },
    
    "verbose" : {
        "alias"       : "v",
        "description" : "Verbose logging",
        "boolean"     : true
    },
    
    "silly" : {
        "alias"       : "s",
        "description" : "Silly logging",
        "boolean"     : true
    },

    "loglevel"  : {
        "description" : "Chattiness, one of: silly, verbose, info, warn, error, & silent",
        "default"     : "info"
    },
    
    "silent" : {
        "description" : "No output until something goes awry"
    },
    
    "test" : {
        "alias"       : "t",
        "description" : "Show the tasks that would have been run",
        "boolean"     : true
    }
}
