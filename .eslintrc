{
    "extends": "arenanet",
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "env": {
      "node": true
    },
    "rules": {
        "arenanet/must-assign-out-of-place-array-method": "off",
        "prefer-const": "warn"
    },
    "overrides": [
        {
            "files": [ "test/**/*.js" ],
            "env": {
                "jest": true
            }
        },
        {
            "files": [ "test/**/*.mjs" ],
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ]
}