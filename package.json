{
  "name": "dullard",
  "version": "1.0.0",
  "description": "Let the computers do the boring stuff.",
  "usage": "dullard -d <dir>,...,<dirN> <step1> ... <stepN>",
  "bin": "./bin/cli.js",
  "main": "./lib/build.js",
  "scripts": {
    "test": "npm run lint && npm run jscs && npm run istanbul",
    "lint": "eslint .",
    "jscs": "jscs -c ./.jscsrc lib/",
    "istanbul": "istanbul test --print both ./node_modules/mocha/bin/_mocha",
    "mocha": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tivac/dullard.git"
  },
  "author": "Pat Cavit <pcavit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tivac/dullard/issues"
  },
  "devDependencies": {
    "eslint": "^1.6.0",
    "istanbul": "^0.3.5",
    "jscs": "^2.3.0",
    "jshint": "~2.8.0",
    "mocha": "^2.1.0"
  },
  "dependencies": {
    "async": "^1.4.2",
    "glob": "^5.0.15",
    "humanize-duration": "^3.3.0",
    "istanbul": "^0.3.5",
    "jscs": "^2.3.0",
    "jshint": "^2.5.11",
    "lodash": "~3.10.1",
    "mocha": "^2.1.0",
    "npmlog": "^1.0.0",
    "optimist": "^0.6.1",
    "strip-json-comments": "^1.0.2",
    "uppity": "~0.1.1"
  },
  "engines": {
    "node": ">=0.10"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "curly": 2,
      "dot-notation": 2,
      "eol-last": 0,
      "key-spacing": [
        2,
        {
          "beforeColon": true,
          "afterColon": true,
          "align": "colon"
        }
      ],
      "no-caller": 2,
      "no-constant-condition": 2,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-empty": 2,
      "no-eval": 2,
      "no-ex-assign": 2,
      "no-extend-native": 2,
      "no-extra-parens": 0,
      "no-extra-semi": 2,
      "no-floating-decimal": 2,
      "no-func-assign": 2,
      "no-implied-eval": 2,
      "no-inner-declarations": 2,
      "no-mixed-requires": 0,
      "no-multi-spaces": [
        2,
        {
          "exceptions": {
            "VariableDeclarator": true,
            "AssignmentExpression": true
          }
        }
      ],
      "no-negated-in-lhs": 2,
      "no-new": 0,
      "no-obj-calls": 2,
      "no-sparse-arrays": 2,
      "no-trailing-spaces": 0,
      "no-underscore-dangle": 0,
      "no-unreachable": 2,
      "use-isnan": 2,
      "valid-typeof": 2
    }
  }
}
